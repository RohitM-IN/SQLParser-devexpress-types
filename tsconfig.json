{
    "compilerOptions": {
      "target": "ESNext", // Target latest ECMAScript
      "module": "NodeNext", // Use NodeNext for better ESM compatibility
      "declaration": true, // Generate declaration files (.d.ts)
      "declarationMap": true, // Generate source maps for declarations
      "emitDeclarationOnly": true, // Only output type definitions, no JavaScript
      "outDir": "./dist", // Output directory for declarations
      "rootDir": "./src", // Root directory for TypeScript files
      "strict": true, // Enable all strict type checking options
      "moduleResolution": "NodeNext", // Proper resolution for ESM imports
      "allowJs": false, // Disable JS files
      "skipLibCheck": true, // Don't check third-party library types
      "forceConsistentCasingInFileNames": true, // Ensure file names are consistent
      "esModuleInterop": true, // Ensure CommonJS modules can be imported
      "preserveSymlinks": true, // Preserve symlinked module paths
      "resolveJsonModule": true, // Allow importing JSON files
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }
  